/* pages/scene/scene.wxss */

page {
  width: 100%;
  height: 100%;
}

.scene {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.scene-editor {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scene-editor-main {
  width: 100%;
  height: 100%;
}

.scene-template {
  flex: 0 0 180rpx;
  height: 180rpx;
  background-color: #eee;
  margin-top: 30rpx;
}

.scene-download {
  flex: 0 0 90rpx;
  margin: 10rpx;
}

.scene-item {
  height: 180rpx;
  margin: 0 10rpx;
}

.scene-item--active {
  outline: #f00 dotted thick;
}

.scene-item-cover {
  width: 100%;
  height: 100%;
}
